{% extends 'layout.twig' %}

{% block body %}
    <script>
        enableNewMessageNotifications('{{ address }}', false)
    </script>

    <a href="/{{ address }}">‚Üê Return to inbox</a>
    &nbsp;
    <a class="button" href="/delete/{{to}}/{{uid}}">Delete mail</a>
    <a style="float: right" class="button" href="/login">Logout</a>
    <br>
    <h2>{{ mail.subject }}</h2>
    <h3>{{ mail.from.text }}</h3>
    <h3>{{ mail.date| date }}</h3>
    <hr>
    {% if mail.html %}
        <div class="mail_body">
            {{ mail.html|sanitizeHtml|raw }}</div>
    {% elseif mail.textAsHtml %}
        <div class="mail_body">
            {{ mail.textAsHtml|sanitizeHtml|raw }}</div>
    {% else %}
        <div class="mail_body"></div>
    {% endif %}


{% endblock %}
